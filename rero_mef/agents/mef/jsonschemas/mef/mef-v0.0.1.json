{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Schema for MEF authority",
  "type": "object",
  "required": [
    "$schema",
    "pid",
    "type"
  ],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Schema to MEF authority record.",
      "type": "string",
      "minLength": 7
    },
    "pid": {
      "title": "Mef record ID",
      "type": "string",
      "minLength": 1
    },
    "viaf_pid": {
      "title": "VIAF agent ID",
      "type": "string",
      "minLength": 1
    },
    "gnd": {
      "title": "GND agent ID",
      "type": "object",
      "properties": {
        "$ref": {
          "title": "ref",
          "type": "string",
          "pattern": "^https://mef.rero.ch/api/agents/gnd/.*?$"
        }
      }
    },
    "rero": {
      "title": "RERO agent ID",
      "type": "object",
      "properties": {
        "$ref": {
          "title": "ref",
          "type": "string",
          "pattern": "^https://mef.rero.ch/api/agents/rero/.*?$"
        }
      }
    },
    "idref": {
      "title": "IDREF agent ID",
      "type": "object",
      "properties": {
        "$ref": {
          "title": "ref",
          "type": "string",
          "pattern": "^https://mef.rero.ch/api/agents/idref/.*?$"
        }
      }
    },
    "deleted": {
      "title": "Deletion date",
      "type": "string"
    },
    "type": {
      "title": "Type",
      "type": "string",
      "enum": [
        "bf:Person",
        "bf:Organisation"
      ]
    }
  }
}
