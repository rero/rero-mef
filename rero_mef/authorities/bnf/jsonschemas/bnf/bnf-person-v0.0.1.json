  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Schema to validate an authority person from bnf against.",
      "type": "string",
      "minLength": 7
    },
    "pid": {
      "title": "Bnf record ID",
      "type": "string",
      "minLength": 1
    },
    "md5": {
      "title": "Md5",
      "type": "string",
      "minLength": 1
    },
    "language_of_person": {
      "title": "Language of person",
      "description": "A language a person uses when writing for publication, broadcasting, etc. (cf. RDA)",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "additionalProperties": false,
        "properties": {
          "value": {
            "$ref": "#/definitions/language_def"
          }
        }
      }
    },
    "gender": {
      "title": "Gender of person",
      "description": "XXX (cf. RDA)",
      "type": "string",
      "validationMessage": "Should be one of the three options: male, female, not known.",
      "minItems": 1,
      "properties": {
        "value": {
          "enum": [
            "male",
            "female",
            "not known"
          ]
        }
      }
    },
    "identifier_for_person": {
      "title": "Identifier for person",
      "description": "XXX (cf. RDA)",
      "type": "string",
      "format": "uri"
    },
