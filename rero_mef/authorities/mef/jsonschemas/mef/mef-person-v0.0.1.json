{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Schema for mef authority",
  "type": "object",
  "required": [
    "$schema",
    "pid"
  ],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Schema to mef authority record.",
      "type": "string",
      "minLength": 7
    },
    "pid": {
      "title": "Mef record ID",
      "type": "string",
      "minLength": 1
    },
    "viaf_pid": {
      "title": "Viaf authority ID",
      "type": "string",
      "minLength": 1
    },
    "bnf": {
      "title": "Bnf authority ID",
      "type": "object"
    },
    "gnd": {
      "title": "Gnd authority ID",
      "type": "object"
    },
    "rero": {
      "title": "Rero authority ID",
      "type": "object"
    },
    "idref": {
      "title": "Idref authority ID",
      "type": "object"
    }
  },
  "sources": {
    "title": "Source authorities list",
    "type": "array",
    "uniqueItems": true,
    "minItems": 1,
    "maxItems": 4,
    "items": {
      "type": "string",
      "enum": [
        "rero",
        "gnd",
        "bnf",
        "idref"
      ]
    }
  }
}
